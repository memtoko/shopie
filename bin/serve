#!/bin/bash
#
# WARNING: If you want use this on production server, dont forget to change apropriate user
# and group. Make sure your application run as system users with limited privileges.
#
# First Change the value for:
#
# - VIRTUALENVDIR to directory of your virtual environment that you created by running virtualenv
# - DJANGODIR to your application project root.
# - NUM_WORKERS to 2 * CPUs + 1
#
# This bash not start your application on daemon mode, use supervisor for it.
NAME="shopie"
VIRTUALENVDIR=/home/syaiful/code/env
DJANGODIR=/home/syaiful/code/shopie
SOCKFILE=/home/syaiful/code/shopie/bin/shopie.sock
USER="django"
GROUP="django"
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=shopie.settings.dev_office  # which settings file should Django use
DJANGO_WSGI_MODULE=shopie.wsgi                     # WSGI module name

echo "Starting $NAME as `whoami`"

cd $DJANGODIR
source $VIRTUALENVDIR/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH
# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR
# Start it
exec $VIRTUALENVDIR/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers=$NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --bind=unix:$SOCKFILE \
  --log-level=debug \
  --log-file=-
